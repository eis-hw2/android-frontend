<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.activity.OrderCheckoutActivity">

<android.support.design.widget.AppBarLayout
    android:id="@+id/abl_test_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:elevation="0dp">

    <com.pipipan.demo.widget.XCollapsingToolbarLayout
        android:id="@+id/ctl_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/douban_blue_80_percent"
        app:contentScrim="@color/white"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:scrimVisibleHeightTrigger="@dimen/space_200">
        <RelativeLayout
            android:id="@+id/receipt"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_collapseMode="parallax">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/text"
                android:textColor="@color/white80"
                android:text="订单配送至"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/address"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/text"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="上海交通大学西11宿舍"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/address"
                android:src="@mipmap/ic_arrow_white"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/receiptName"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white80"
                    android:text="皮皮潘"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/receiptPhone"
                    android:layout_marginLeft="10dp"
                    android:text="18317126628"
                    android:textColor="@color/white80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_collapseMode="pin" />

        <com.hjq.bar.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backButton="false"
            app:barStyle="transparent"
            app:layout_collapseMode="pin">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:id="@+id/title"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.hjq.bar.TitleBar>

    </com.pipipan.demo.widget.XCollapsingToolbarLayout>

</android.support.design.widget.AppBarLayout>

<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="送达时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/douban_blue_80_percent"
                    android:textStyle="bold"
                    android:text="尽快送达"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/douban_gray_transparent_20"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="支付方式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/douban_blue_80_percent"
                    android:textStyle="bold"
                    android:text="支付宝"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="老妈烫饭"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/douban_gray_transparent_20" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/douban_gray_transparent_20" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="跑腿费" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/proxyPrice"
                    android:text="￥"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/proxyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="15"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@id/totalPrice"
                    android:layout_centerVertical="true"
                    android:text="合计"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toLeftOf="@id/totalPrice"
                    android:textSize="16sp"
                    android:text="￥"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/totalPrice"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:text="30"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="7"
            android:text="合计 ￥55"
            android:textColor="@color/douban_gray_28_percent"
            android:background="@color/douban_gray"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/checkout"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="@color/white"
            android:background="@color/light_green"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
